{% extends 'layouts/main.twig' %}

{% block jumbo %}
<div class="well well-lg">
    {% include 'partials/form.twig' %}
</div>
{% endblock jumbo %}

{% block contents %}
<ul class="list-group well well-sm">
{% for todo in todoList %}
    <li class="list-group-item{{ todo.is_done ? ' list-group-item-success' }}">
        <div class="row">
            <div class="col-lg-12">
                <div class="checkbox checkbox-success">
                    <input  type="checkbox" id="checkbox_{{ todo.id }}" data-id="{{ todo.id }}" {{ todo.is_done ? 'checked="checked"' }}>
                    <label for="checkbox_{{ todo.id }}">
                        {{ todo.message }}
                    </label>
                    <button type="button" data-id="{{ todo.id }}" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                </div>
            </div>
        </div>
    </li>
{% else %}
    <li class="list-group-item list-group-item-info">Todo list is empty.</li>
{% endfor %}
    <li class="list-group-item">
        <div class="row">
            <div class="col-lg-6 text-left">
                <div class="btn-group" role="group" aria-label="">
                  <a type="button" href="{{ urlFor('home') }}" class="btn btn-default btn-sm btn-clear" data-type="all">All</a>
                  <a type="button" href="{{ urlFor('home',{filter:'active'}) }}"  class="btn btn-default btn-sm btn-clear" data-type="active">Active</a>
                  <a type="button" href="{{ urlFor('home',{filter:'completed'}) }}" class="btn btn-default btn-sm btn-clear" data-type="completed">Completed</a>
                </div>
            </div>
            <div class="col-lg-6 text-right">
                <div class="btn-group" role="group" aria-label="...">
                  <button type="button" class="btn btn-default btn-sm btn-clear" data-type="completed">Clear completed</button>
                  <button type="button" class="btn btn-default btn-sm btn-clear" data-type="all">Clear all</button>
                </div>
            </div>
        </div>
    </li>
</ul>
{% endblock contents %}
